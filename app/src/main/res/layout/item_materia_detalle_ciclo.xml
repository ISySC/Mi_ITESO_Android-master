<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_materia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginTop="@dimen/mar_20dp"
        android:layout_marginLeft="@dimen/mar_20dp"
        android:text="{materia}"
        android:textColor="@color/slate_grey"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:id="@+id/tv_calificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/mar_20dp"
        android:text="5"
        android:textColor="@color/slate_grey"
        android:textSize="@dimen/font_size_13" />

</RelativeLayout>