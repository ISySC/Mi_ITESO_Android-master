<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/mar_12dp">

    <TextView
        android:id="@+id/lbl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="21dp"
        android:text="description"
        android:textColor="@color/colorTxtView"
        android:textSize="@dimen/font_size_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_title"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:text="Fecha de vencimiento"
        android:textColor="@color/colorTxtView"
        android:textSize="@dimen/font_size_12" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lbl_title"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:text="date"
        android:textColor="@color/colorTxtView"
        android:textSize="@dimen/font_size_12" />

    <TextView
        android:id="@+id/lbl_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_sub_title"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="@dimen/mar_12dp"
        android:text="Importe"
        android:textColor="@color/colorTxtView"
        android:textSize="@dimen/font_size_11" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/date"
        android:layout_marginRight="18dp"
        android:layout_marginTop="@dimen/mar_12dp"
        android:text="$0.00"
        android:textColor="@color/colorTxtView"
        android:textSize="@dimen/font_size_12" />
</RelativeLayout>