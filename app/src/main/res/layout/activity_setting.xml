<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/ln_header"
        layout="@layout/layout_header" />

    <TextView
        android:id="@+id/lbl_title_show_hide_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_header"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="28dp"
        android:text="@string/title_show_hide_notice"
        android:textColor="@color/colorTxtGeneral"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lst_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lbl_title_show_hide_notice" />

</RelativeLayout>