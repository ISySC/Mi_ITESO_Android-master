<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="94dp">

    <RelativeLayout
        android:id="@+id/rl_materia"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_ciclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_16dp"
            android:layout_marginTop="@dimen/mar_16dp"
            android:layout_marginRight="@dimen/mar_68dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:letterSpacing="0.03"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Ciclo n "
            android:textColor="@color/slate_grey"
            android:textSize="@dimen/font_size_16" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@id/tv_ciclo"
            android:layout_marginLeft="@dimen/mar_16dp"
            android:layout_marginRight="@dimen/mar_52dp"
            android:indeterminate="false"
            android:max="100"
            android:progressTint="@color/nice_blue" />

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ciclo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mar_12dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_ios"
            android:tint="@color/nice_blue" />

        <TextView
            android:id="@+id/tv_porcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/mar_16dp"
            android:layout_marginRight="@dimen/mar_32dp"
            android:letterSpacing="0.03"
            android:text="0%"
            android:textColor="@color/slate_grey"
            android:textSize="15sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>