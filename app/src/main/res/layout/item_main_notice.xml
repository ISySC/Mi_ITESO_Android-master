<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_notice"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_bar"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="#4d4d4d"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/ic_notice"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/lbl_notice_description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/lbl_notice_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="50dp"
        android:text="description"
        android:textColor="@color/colorTxtView"
        android:textSize="@dimen/font_size_12"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/lbl_sub_notice_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_notice_description"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="50dp"
        android:maxLines="1"
        android:text="sub_description"
        android:textColor="@color/colorTxtView"
        android:textSize="@dimen/font_size_12" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_sub_notice_description"
        android:layout_marginLeft="83dp"
        android:layout_marginRight="50dp"
        android:text=""
        android:textColor="@color/colorTxtView"
        android:textSize="@dimen/font_size_12" />

    <TextView
        android:id="@+id/lbl_type_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="60dp"
        android:text=""
        android:textColor="@color/colorTxtView"
        android:textSize="@dimen/font_size_12" />

    <ImageView
        android:id="@+id/ic_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/mar_20dp"
        android:src="@drawable/ic_arrow_ios"
        android:tint="@color/nice_blue" />

    <TextView
        android:id="@+id/tv_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/mar_20dp"
        android:text="{url}"
        android:visibility="gone" />

</RelativeLayout>