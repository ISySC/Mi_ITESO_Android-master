<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView

        android:id="@+id/tv_ciclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:letterSpacing="0.03"
        android:text="Asignatura"
        android:textColor="@color/slate_grey"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_room_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ciclo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/mar_12dp"
        android:text="SalÃ³n"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:id="@+id/tv_lenguaje_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_room_res"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Profesor"
        android:textSize="@dimen/font_size_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_teacher_res" />

    <TextView
        android:id="@+id/tv_teacher_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lenguaje_res"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Idioma"
        android:textSize="@dimen/font_size_13"
        app:layout_constraintBottom_toTopOf="@+id/tv_lenguaje_res"
        app:layout_constraintStart_toStartOf="@+id/tv_room_res" />

</RelativeLayout>