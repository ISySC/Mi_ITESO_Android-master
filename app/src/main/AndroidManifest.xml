<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.iteso.miiteso">

    <uses-permission android:name="android.permission.INTERNET" />

    <!--Google Maps, hará uso de OpenGL ES versión 2. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".miiteso.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".itesubes.ComplementsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".miiteso.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".miiteso.ConfigurationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".miiteso.NoticePrivacyActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".miiteso.NotificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".miiteso.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".miiteso.WebViewNoticeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".miiteso.Acompanamiento"
            android:screenOrientation="portrait" />
        <activity
            android:name=".miiteso.EmailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".miiteso.EmailDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".itesubes.ChooseRouteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".itesubes.ItesubesMapActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".miiteso.AboutActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".miiteso.MateriaKardexDetalleActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".miiteso.MateriaPorAreaDetalleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".miiteso.DetailNotifActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>